require github [ user="strophe" ] autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.13 1.12 1.11 1.10 1.9 ] ]

SUMMARY="A minimal XMPP library written in C"
HOMEPAGE="http://strophe.im/libstrophe"

LICENCES="MIT"
SLOT="0"
MYOPTIONS="
    doc
    ( providers: libressl openssl ) [[ number-selected = exactly-one ]]
    ( providers: libxml2 expat ) [[ number-selected = exactly-one ]]
"

DEPENDENCIES="
    build:
        doc? ( app-doc/doxygen )
    build+run:
        providers:libressl? ( dev-libs/libressl:= )
        providers:openssl? ( dev-libs/openssl )
        providers:expat? ( dev-libs/expat )
        providers:libxml2? ( dev-libs/libxml2:2.0 )
"

BUGS_TO="flocke@shadowice.org"

DEFAULT_SRC_CONFIGURE_OPTIONS=( 'providers:libxml2 --with-libxml2' )

src_compile() {
    default

    option doc && edo doxygen
}

src_install() {
    default

    option doc && cd docs && dodoc -r html
}

