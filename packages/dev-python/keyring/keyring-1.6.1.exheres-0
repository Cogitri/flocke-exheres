require pypi [ suffix=zip ] distutils [ python_dep=2.7 ]

SUMMARY="Store and access your passwords safely."
DESCRIPTION="
Provides easy access to safe password storage services from python applications.
Supports the KDE Wallet, GNOME Keyring and the newer Secret Service API as backends
as well as the native CryptFile and UncryptFile storage.
"

LICENCES="PSF"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-python/setuptools
    suggestion:
        gnome-desktop/libgnome-keyring[gobject-introspection] [[ description = [ GNOME Keyring backend ] ]]
        gnome-bindings/pygobject:3 [[ description = [ GNOME Keyring backend ] ]]
        kde/pykde4 [[ description = [ KDE Wallet backend ] ]]
"

BUGS_TO="flocke@shadowice.org"

